[diff]
  tool = nvim
[difftool]
  prompt = false
[merge]
  tool = nvim
[mergetool]
  prompt = true
  keepBackup = false
[mergetool "nvim"]
  cmd = nvim -d $MERGED $LOCAL $REMOTE -c 'wincmd J'
[core]
  pager = cat
  editor = nvim
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  rb = rebase
  mt = mergetool
  df = diff
  dc = diff --cached
  dfc = diff --compact-summary
  l = lol -10
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
